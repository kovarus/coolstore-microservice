properties([pipelineTriggers([githubPush()])])

pipeline {
  agent {
    kubernetes {
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: nodejs
    image: docker-registry.default.svc:5000/openshift/nodejs
    command:
    - cat
    tty: true
    workingDir: /home/jenkins/agent/workspace/demo-team/coolstore-webui/coolstore-ui
"""
    }
  }
  stages {
    stage('Test webui') {
      steps {
        container('nodejs') {
          git branch: 'stable-ocp-3.11', url: 'https://github.com/kovarus/coolstore-microservice.git'
          sh 'npm install'
          sh 'node server.js'
        }
        container('busybox') {
          sh '/bin/busybox'
        }
      }
    }
  }
}
