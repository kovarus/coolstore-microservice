properties([pipelineTriggers([githubPush()])])

pipeline {
  agent {
    kubernetes {
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: nodejs
    image: node:8
    command:
    - cat
    tty: true
    privileged: true
"""
    }
  }
  stages {
    stage('Test webui') {
      steps {
        container('jnlp') {
          sh 'chmod -R g+w /home/jenkins/agent/workspace'
        }
        container('nodejs') {
          sh 'ls'
          sh 'cd coolstore-ui'
          sh 'npm install'
        }
      }
    }
  }
}
