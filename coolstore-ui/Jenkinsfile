properties([pipelineTriggers([githubPush()])])

pipeline {
  agent {
    kubernetes {
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: nodejs
    image: node:8
    command:
    - cat
    tty: true
    privileged: true
"""
    }
  }
  stages {
    stage('Test webui') {
      steps {
        container('nodejs') {
          dir("coolstore-ui") {
            sh 'npm install'
            sh 'node server.js &'
          }
          sh 'curl -f -L localhost:8080'
        }
      }
    }
    stage('Deploy webui') {
      steps {
        container('jnlp') {
          sh 'oc start-build --follow web-ui -n coolstore-demo'
        }
      }
    }
  }
}
